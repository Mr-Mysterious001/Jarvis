{
  "tasks": [
    {
      "name": "open_terminal",
      "type": "application",
      "description": "Open a terminal emulator",
      "patterns": [
        "open terminal",
        "launch terminal",
        "start console",
        "open kitty",
        "open alacritty"
      ],
      "action": {
        "command": "kitty",
        "args": [],
        "fallback_commands": ["alacritty", "konsole", "gnome-terminal"]
      },
      "response_template": "Opening terminal for you, sir"
    },
    {
      "name": "open_browser",
      "type": "application",
      "description": "Open web browser",
      "patterns": [
        "open browser",
        "launch firefox",
        "start chrome",
        "open brave",
        "browse the web"
      ],
      "action": {
        "command": "firefox",
        "args": [],
        "fallback_commands": ["brave", "chromium", "google-chrome-stable"]
      },
      "response_template": "Launching web browser"
    },
    {
      "name": "open_code_editor",
      "type": "application",
      "description": "Open code editor",
      "patterns": [
        "open code",
        "open vscode",
        "open editor",
        "start coding",
        "open neovim"
      ],
      "action": {
        "command": "code",
        "args": [],
        "fallback_commands": ["nvim", "vim", "emacs", "kate"]
      },
      "response_template": "Opening code editor for you"
    },
    {
      "name": "search_web",
      "type": "web",
      "description": "Search the web",
      "patterns": [
        "search for",
        "google",
        "look up",
        "find information about"
      ],
      "action": {
        "command": "xdg-open",
        "args_template": "https://www.google.com/search?q={query}"
      },
      "response_template": "Searching the web for {query}"
    },
    {
      "name": "system_info",
      "type": "system",
      "description": "Get system information",
      "patterns": [
        "system info",
        "system status",
        "how much ram",
        "cpu usage",
        "disk space",
        "system resources"
      ],
      "action": {
        "command": "custom_function",
        "function": "get_system_info"
      },
      "response_template": "Here's your system information: {result}"
    },
    {
      "name": "volume_up",
      "type": "system",
      "description": "Increase volume",
      "patterns": [
        "volume up",
        "increase volume",
        "louder",
        "turn up volume"
      ],
      "action": {
        "command": "pactl",
        "args": ["set-sink-volume", "@DEFAULT_SINK@", "+10%"]
      },
      "response_template": "Volume increased by 10 percent"
    },
    {
      "name": "volume_down",
      "type": "system",
      "description": "Decrease volume",
      "patterns": [
        "volume down",
        "decrease volume",
        "quieter",
        "turn down volume"
      ],
      "action": {
        "command": "pactl",
        "args": ["set-sink-volume", "@DEFAULT_SINK@", "-10%"]
      },
      "response_template": "Volume decreased by 10 percent"
    },
    {
      "name": "mute",
      "type": "system",
      "description": "Mute audio",
      "patterns": [
        "mute",
        "silence",
        "mute audio",
        "turn off sound"
      ],
      "action": {
        "command": "pactl",
        "args": ["set-sink-mute", "@DEFAULT_SINK@", "toggle"]
      },
      "response_template": "Audio muted"
    },
    {
      "name": "workspace_switch",
      "type": "system",
      "description": "Switch Hyprland workspace",
      "patterns": [
        "workspace",
        "switch to workspace",
        "go to workspace",
        "change workspace"
      ],
      "action": {
        "command": "hyprctl",
        "args_template": "dispatch workspace {number}"
      },
      "response_template": "Switching to workspace {number}"
    },
    {
      "name": "move_window",
      "type": "system",
      "description": "Move window to workspace",
      "patterns": [
        "move window",
        "send window",
        "move to workspace"
      ],
      "action": {
        "command": "hyprctl",
        "args_template": "dispatch movetoworkspace {number}"
      },
      "response_template": "Moving window to workspace {number}"
    },
    {
      "name": "take_screenshot",
      "type": "system",
      "description": "Take a screenshot",
      "patterns": [
        "take screenshot",
        "capture screen",
        "screenshot",
        "screen capture"
      ],
      "action": {
        "command": "bash",
        "args": ["-c", "grim -g \"$(slurp)\" ~/Pictures/screenshot_$(date +%Y%m%d_%H%M%S).png"]
      },
      "response_template": "Screenshot captured and saved to Pictures folder"
    },
    {
      "name": "fullscreen_screenshot",
      "type": "system",
      "description": "Take fullscreen screenshot",
      "patterns": [
        "fullscreen screenshot",
        "capture entire screen",
        "full screenshot"
      ],
      "action": {
        "command": "grim",
        "args": ["~/Pictures/fullscreen_$(date +%Y%m%d_%H%M%S).png"]
      },
      "response_template": "Fullscreen captured and saved"
    },
    {
      "name": "lock_screen",
      "type": "system",
      "description": "Lock the screen",
      "patterns": [
        "lock screen",
        "lock computer",
        "secure system",
        "lock desktop"
      ],
      "action": {
        "command": "swaylock",
        "args": ["-c", "000000"],
        "fallback_commands": ["hyprlock", "i3lock"]
      },
      "response_template": "Locking the screen"
    },
    {
      "name": "brightness_up",
      "type": "system",
      "description": "Increase screen brightness",
      "patterns": [
        "brightness up",
        "brighter",
        "increase brightness",
        "screen brighter"
      ],
      "action": {
        "command": "brightnessctl",
        "args": ["set", "+10%"]
      },
      "response_template": "Brightness increased"
    },
    {
      "name": "brightness_down",
      "type": "system",
      "description": "Decrease screen brightness",
      "patterns": [
        "brightness down",
        "dimmer",
        "decrease brightness",
        "screen dimmer"
      ],
      "action": {
        "command": "brightnessctl",
        "args": ["set", "10%-"]
      },
      "response_template": "Brightness decreased"
    },
    {
      "name": "play_music",
      "type": "application",
      "description": "Play music",
      "patterns": [
        "play music",
        "start music",
        "play some music",
        "music please"
      ],
      "action": {
        "command": "playerctl",
        "args": ["play"],
        "fallback_commands": ["spotify", "ncmpcpp"]
      },
      "response_template": "Playing music"
    },
    {
      "name": "pause_music",
      "type": "application",
      "description": "Pause music",
      "patterns": [
        "pause music",
        "stop music",
        "pause playback"
      ],
      "action": {
        "command": "playerctl",
        "args": ["pause"]
      },
      "response_template": "Music paused"
    },
    {
      "name": "next_track",
      "type": "application",
      "description": "Skip to next track",
      "patterns": [
        "next song",
        "skip song",
        "next track",
        "skip this"
      ],
      "action": {
        "command": "playerctl",
        "args": ["next"]
      },
      "response_template": "Skipping to next track"
    },
    {
      "name": "wifi_status",
      "type": "system",
      "description": "Check WiFi status",
      "patterns": [
        "wifi status",
        "network status",
        "am i connected",
        "internet status"
      ],
      "action": {
        "command": "nmcli",
        "args": ["general", "status"]
      },
      "response_template": "Checking network status: {result}"
    },
    {
      "name": "weather",
      "type": "web",
      "description": "Get weather information",
      "patterns": [
        "weather",
        "what's the weather",
        "temperature outside",
        "how's the weather"
      ],
      "action": {
        "command": "curl",
        "args": ["-s", "wttr.in?format=3"]
      },
      "response_template": "Current weather: {result}"
    },
    {
      "name": "system_update",
      "type": "system",
      "description": "Update system packages",
      "patterns": [
        "update system",
        "system update",
        "update packages",
        "upgrade system"
      ],
      "action": {
        "command": "kitty",
        "args": ["-e", "sudo", "pacman", "-Syu"]
      },
      "response_template": "Starting system update in terminal"
    },
    {
      "name": "bluetooth_on",
      "type": "system",
      "description": "Turn on Bluetooth",
      "patterns": [
        "bluetooth on",
        "enable bluetooth",
        "turn on bluetooth"
      ],
      "action": {
        "command": "bluetoothctl",
        "args": ["power", "on"]
      },
      "response_template": "Bluetooth enabled"
    },
    {
      "name": "bluetooth_off",
      "type": "system",
      "description": "Turn off Bluetooth",
      "patterns": [
        "bluetooth off",
        "disable bluetooth",
        "turn off bluetooth"
      ],
      "action": {
        "command": "bluetoothctl",
        "args": ["power", "off"]
      },
      "response_template": "Bluetooth disabled"
    },
    {
      "name": "open_file_manager",
      "type": "application",
      "description": "Open file manager",
      "patterns": [
        "open files",
        "file manager",
        "open folder",
        "browse files"
      ],
      "action": {
        "command": "thunar",
        "args": [],
        "fallback_commands": ["dolphin", "nautilus", "pcmanfm", "ranger"]
      },
      "response_template": "Opening file manager"
    },
    {
      "name": "empty_trash",
      "type": "system",
      "description": "Empty trash",
      "patterns": [
        "empty trash",
        "clear trash",
        "delete trash",
        "clean trash"
      ],
      "action": {
        "command": "rm",
        "args": ["-rf", "~/.local/share/Trash/*"]
      },
      "response_template": "Trash emptied"
    },
    {
      "name": "show_calendar",
      "type": "system",
      "description": "Show calendar",
      "patterns": [
        "show calendar",
        "what's the date",
        "what day is it",
        "calendar"
      ],
      "action": {
        "command": "cal",
        "args": []
      },
      "response_template": "Here's the calendar: {result}"
    },
    {
      "name": "shutdown",
      "type": "system",
      "description": "Shutdown the system",
      "patterns": [
        "shutdown",
        "power off",
        "turn off computer"
      ],
      "action": {
        "command": "systemctl",
        "args": ["poweroff"],
        "confirmation_required": true
      },
      "response_template": "Shutting down the system"
    },
    {
      "name": "reboot",
      "type": "system",
      "description": "Reboot the system",
      "patterns": [
        "reboot",
        "restart computer",
        "restart system"
      ],
      "action": {
        "command": "systemctl",
        "args": ["reboot"],
        "confirmation_required": true
      },
      "response_template": "Rebooting the system"
    },
    {
      "name": "suspend",
      "type": "system",
      "description": "Suspend the system",
      "patterns": [
        "suspend",
        "sleep",
        "hibernate"
      ],
      "action": {
        "command": "systemctl",
        "args": ["suspend"]
      },
      "response_template": "Suspending the system"
    }
  ]
}